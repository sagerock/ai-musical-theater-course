{
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "devCommand": "npm start",
  "functions": {
    "api/send-email.js": {
      "maxDuration": 30
    },
    "api/openai.js": {
      "maxDuration": 60
    },
    "api/anthropic.js": {
      "maxDuration": 60
    },
    "api/google.js": {
      "maxDuration": 60
    },
    "api/perplexity.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/__/auth/action",
      "destination": "/reset-password"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}