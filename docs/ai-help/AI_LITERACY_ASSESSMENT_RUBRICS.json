    {
      "heading": "Skill-Specific Rubrics",
      "rubrics": [
        {
          "title": "Prompt Engineering Mastery",
          "levels": [
            {
              "level": "Beginner",
              "characteristics": "Short, vague",
              "examplePrompt": "Explain photosynthesis"
            },
            {
              "level": "Developing",
              "characteristics": "Some context",
              "examplePrompt": "Explain photosynthesis to a 10th grader"
            },
            {
              "level": "Proficient",
              "characteristics": "Clear structure",
              "examplePrompt": "I'm a 10th grade student. Explain photosynthesis focusing on light/dark reactions with simple analogies"
            },
            {
              "level": "Advanced",
              "characteristics": "Strategic design",
              "examplePrompt": "Acting as a biology tutor, explain photosynthesis to a visual learner in 10th grade. Break down: 1) Light reactions 2) Dark reactions 3) Their connection. Use a factory analogy and create a memorable acronym"
            },
            {
              "level": "Expert",
              "characteristics": "Meta-prompting",
              "examplePrompt": "Generate 3 different explanations of photosynthesis for different learning styles. Then analyze which would be most effective for a 10th grader struggling with chemistry concepts. Adjust based on this analysis"
            }
          ]
        },
        {
          "title": "AI Ethics Assessment",
