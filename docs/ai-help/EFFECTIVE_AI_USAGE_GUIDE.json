        {
          "title": "The Copy-Paste Trap",
          "whatStudentsDo": "Copy AI responses directly",
          "whyWrong": "No learning occurs, plagiarism risk",
          "betterApproach": "Use AI output as starting point for own work",
          "teachingActivity": {
            "description": "Have students:",
            "steps": [
              "Get an AI response",
              "Rewrite it entirely in their voice",
              "Add personal examples",
              "Cite AI as a brainstorming tool"
            ]
          }
        },
        {
          "title": "The Homework Machine Mindset",
          "whatStudentsDo": "Do my homework for me",
          "whyWrong": "Avoids learning, develops dependence",
          "betterApproach": "Help me understand so I can do it",
          "interventionStrategy": [
            "Review student prompts",
            "Flag 'do this for me' language",
            "Redirect to learning-focused prompts"
          ]
        },
        {
          "title": "The Single Source Error",
          "whatStudentsDo": "Accept first AI answer as truth",
          "whyWrong": "AI can be incorrect or biased",
          "betterApproach": "Verify, cross-reference, think critically",
          "criticalThinkingExercise": {
            "steps": [
              "Get AI response on controversial topic",
              "Identify potential biases",
              "Find contradicting sources",
              "Form independent conclusion"
            ]
          }
        },
        {
          "title": "The Shallow Interaction",
          "whatStudentsDo": "One question and done",
          "whyWrong": "Misses deeper understanding",
          "betterApproach": "Follow-up questions, dig deeper",
          "depthDevelopment": {
            "technique": "Teach the '5 Whys' with AI:",
            "steps": [
              "Initial question",
              "Why is that?",
              "Why does that matter?",
              "Why should I care?",
              "Why will this help me?"
            ]
          }
        }
