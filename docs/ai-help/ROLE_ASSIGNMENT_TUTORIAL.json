          "heading": "Step-by-Step Process",
          "steps": [
            {
              "step": "Locate the Student",
              "details": [
                "Use the search bar to find students quickly",
                "Students are shown with blue user icons"
              ]
            },
            {
              "step": "Click Edit",
              "details": [
                "Find the \"Edit\" button next to their current role",
                "The role selector will appear"
              ]
            },
            {
              "step": "Choose New Role",
              "dropdownOptions": [
                "Student (default)",
                "Student Assistant",
                "Teaching Assistant",
                "Instructor"
              ]
            },
            {
              "step": "Confirm Selection",
              "details": [
                "Click the green checkmark ‚úì",
                "Wait for \"Role updated\" confirmation"
              ]
