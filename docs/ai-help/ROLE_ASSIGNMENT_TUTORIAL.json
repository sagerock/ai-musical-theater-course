    {
      "heading": "Role Assignment Scenarios",
      "scenarios": [
        {
          "scenario": "Promoting a Student to Student Assistant",
          "whenToDo": [
            "Student consistently helps classmates",
            "Shows leadership in group work",
            "Volunteers for peer tutoring"
          ],
          "process": [
            "Find student in Students section",
            "Click Edit ‚Üí Select \"Student Assistant\"",
            "Confirm with green checkmark",
            "Student now appears in \"Other Course Members\""
          ]
        },
        {
          "scenario": "Adding a Teaching Assistant",
          "whenToDo": [
            "Graduate student assigned to help",
            "Need help managing large class",
            "Someone to review student work"
          ],
          "process": [
            "Ensure person is enrolled in course first",
            "Find them in Students section",
            "Click Edit ‚Üí Select \"Teaching Assistant\"",
            "Confirm change",
            "They'll move to Teaching Assistants section"
          ]
        },
        {
          "scenario": "Creating a Co-Instructor",
          "whenToDo": [
            "Team teaching arrangement",
            "Guest instructor for module",
            "Shared course responsibility"
          ],
          "process": [
            "Add person to course if needed",
            "Find in Students section",
            "Click Edit ‚Üí Select \"Instructor\"",
            "Confirm change",
            "They appear in Instructors section"
          ]
        }
      ]
    },
