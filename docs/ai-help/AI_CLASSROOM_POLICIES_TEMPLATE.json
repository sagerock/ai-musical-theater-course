        {
          "title": "Detailed Usage Framework",
          "levels": [
            {
              "level": "Level 1: AI as Tutor",
              "context": "When You're Stuck",
              "allowed": [
                "\"Explain this concept differently\"",
                "\"Why is my answer wrong?\"",
                "\"Give me a hint, not the answer\""
              ],
              "notAllowed": [
                "\"Do this problem for me\""
