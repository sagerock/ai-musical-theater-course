                {
                  "name": "First Draft",
                  "time": "25 min",
                  "tasks": [
                    "Write opening scene",
                    "Establish voice",
                    "No AI assistance"
                  ]
                }
              ]
            },
            {
              "session": "Session 2: AI Collaboration",
              "activities": [
                {
                  "name": "AI Writing Partner Tasks",
                  "time": "30 min",
                  "tasks": [
                    {
                      "task": 1,
                      "focus": "Character depth",
                      "prompt": "My character is [description]. What are 3 unexpected personality traits that would make them more complex?"
                    },
                    {
                      "task": 2,
                      "focus": "Plot development",
                      "prompt": "My story conflict is [description]. Suggest 2 subplot ideas that would enhance the main theme."
                    },
                    {
                      "task": 3,
                      "focus": "Sensory details",
                      "prompt": "My setting is [description]. Give me unique sensory details I might not have considered."
                    }
                  ]
                },
                {
                  "name": "Revision",
                  "time": "15 min",
                  "guidelines": [
                    "Integrate select AI suggestions",
                    "Maintain original voice",
                    "Enhance, don't replace"
                  ]
                },
                {
                  "name": "Sharing Circle",
                  "activities": [
                    "Read favorite enhanced passage",
                    "Explain AI contribution",
                    "Discuss voice preservation"
                  ]
