      "heading": "English & Writing Lessons",
      "lessons": [
        {
          "title": "Lesson 1: Literary Analysis with AI Perspectives",
          "gradeLevel": "11-12",
          "duration": "2 class periods (90 minutes)",
          "topic": "Multiple Perspectives on \"The Great Gatsby\"",
          "structure": [
            {
              "day": "Day 1: Human Analysis",
              "duration": "45 min",
              "activities": [
                {
                  "name": "Warm-up",
                  "time": "10 min",
                  "tasks": [
                    "Quick write: \"What does the green light symbolize?\"",
                    "Pair-share responses",
                    "No AI permitted"
                  ]
                },
                {
                  "name": "Close Reading",
                  "time": "25 min",
                  "tasks": [
                    "Students annotate Chapter 5 passage",
                    "Identify literary devices",
                    "Form initial interpretations"
                  ]
                },
                {
                  "name": "Group Discussion",
                  "time": "10 min",
                  "tasks": [
                    "Share interpretations",
                    "Document different viewpoints",
                    "Create class interpretation map"
                  ]
                }
              ]
            },
            {
              "day": "Day 2: AI-Enhanced Analysis",
              "duration": "45 min",
              "activities": [
                {
                  "name": "AI Exploration",
                  "time": "20 min",
                  "prompt": "Analyze the symbolism of the green light in The Great Gatsby, Chapter 5. Consider Fitzgerald's use of color, distance, and desire. Provide textual evidence.",
                  "instructions": "Students use 3 different AI models with this prompt"
                },
                {
                  "name": "Comparative Analysis",
                  "time": "15 min",
                  "task": "Create chart comparing:",
                  "compareItems": [
                    "Human interpretations",
                    "AI Model 1 interpretation",
                    "AI Model 2 interpretation",
                    "AI Model 3 interpretation"
                  ]
                },
                {
                  "name": "Synthesis Writing",
                  "time": "10 min",
                  "reflectionPrompts": [
                    "Which interpretation is most convincing? Why?",
                    "What did AI miss that humans caught?",
                    "What did AI reveal you hadn't considered?"
                  ]
                }
              ]
            }
          ],
          "assessment": {
            "participationInHumanAnalysis": 30,
            "qualityOfAIPrompts": 20,
            "comparativeChart": 25,
            "synthesisReflection": 25
          }
        },
        {
          "title": "Lesson 2: Argumentative Essay Development",
          "gradeLevel": "9-10",
          "duration": "3 class periods (135 minutes)",
          "topic": "Building Strong Arguments",
          "structure": [
            {
              "period": "Period 1: Argument Foundation (No AI)",
              "activities": [
                {
                  "name": "Introduction",
                  "time": "15 min",
                  "tasks": [
                    "Review argumentative structure",
                    "Analyze sample thesis statements",
                    "Practice claim-evidence-reasoning"
                  ]
                },
                {
                  "name": "Topic Selection",
                  "time": "30 min",
                  "tasks": [
                    "Brainstorm controversial topics",
                    "Research initial positions",
                    "Draft working thesis",
                    "Find 2 supporting sources"
                  ]
                }
              ]
            },
            {
              "period": "Period 2: AI Collaboration",
              "activities": [
                {
                  "name": "AI Challenger Round",
                  "time": "20 min",
                  "prompt": "My thesis is: [student thesis]. What are the three strongest counterarguments to this position? Provide specific evidence for each."
                },
                {
                  "name": "Strengthening Arguments",
                  "time": "25 min",
                  "tasks": [
                    "Address counterarguments",
                    "Refine thesis",
                    "Find additional evidence",
                    "Use AI to identify logical fallacies"
                  ]
                }
              ]
            },
            {
              "period": "Period 3: Final Development",
              "activities": [
                {
                  "name": "Peer Review with AI",
                  "time": "20 min",
                  "tasks": [
                    "Exchange drafts with partner",
                    "Both use AI to check logic",
                    "Compare human and AI feedback"
                  ]
                },
                {
                  "name": "Revision",
                  "time": "25 min",
                  "tasks": [
                    "Integrate feedback",
                    "Polish arguments",
                    "Ensure original voice",
                    "Complete AI citation"
                  ]
                }
              ]
            }
          ],
          "deliverables": [
            "Original thesis and sources",
            "AI conversation transcript",
            "Final essay with addressed counterarguments",
            "Reflection on AI's role"
          ]
        }
      ]
    },
    {
      "heading": "STEM Lessons",
      "lessons": [
        {
          "title": "Lesson 3: Scientific Method with AI Hypothesis Testing",
          "gradeLevel": "7-8",
          "duration": "2 class periods (90 minutes)",
          "subject": "General Science",
          "structure": [
            {
              "day": "Day 1: Traditional Scientific Method",
              "activities": [
                {
                  "name": "Review Steps",
                  "time": "15 min",
                  "steps": [
                    "Observation",
                    "Question",
                    "Hypothesis",
                    "Experiment design",
                    "Analysis",
                    "Conclusion"
                  ]
                },
                {
                  "name": "Practice Problem",
                  "time": "30 min",
                  "problem": "Why do plants in the window grow faster?",
                  "tasks": [
                    "Students develop hypotheses individually",
                    "Design basic experiments",
                    "Predict outcomes"
                  ]
                }
              ]
            },
            {
              "day": "Day 2: AI-Enhanced Science",
              "activities": [
                {
                  "name": "AI Hypothesis Generator",
                  "time": "20 min",
                  "prompt": "I observed that plants near windows grow faster than plants in room corners. Generate 5 possible scientific hypotheses with testable predictions."
                },
                {
                  "name": "Comparison Activity",
                  "time": "15 min",
                  "tasks": [
                    "List student hypotheses",
                    "List AI hypotheses",
                    "Identify overlaps and differences",
                    "Discuss which are most testable"
                  ]
                },
                {
                  "name": "Experimental Design Challenge",
                  "time": "10 min",
                  "aiTasks": [
                    "Identify variables to control",
                    "Suggest measurement methods",
                    "Predict potential errors"
                  ]
                }
              ]
            }
          ],
          "assessmentRubric": [
            {
              "criteria": "Original hypothesis quality",
              "points": 20
            },
            {
              "criteria": "AI prompt effectiveness",
              "points": 20
            },
            {
              "criteria": "Comparison analysis",
              "points": 20
            },
            {
              "criteria": "Experimental design",
              "points": 20
            },
            {
              "criteria": "Process documentation",
              "points": 20
            }
          ]
        },
        {
          "title": "Lesson 4: Math Problem-Solving Journey",
          "gradeLevel": "9-10",
          "duration": "1 class period (45 minutes)",
          "topic": "Quadratic Equations",
          "structure": [
            {
              "phase": "Starter Problem",
              "time": "10 min",
              "problem": "A ball is thrown upward with initial velocity 20 m/s. When does it hit the ground? (h = -5t² + 20t)",
              "approach": "Students attempt independently first"
            },
            {
              "phase": "AI Learning Partner",
              "time": "20 min",
              "rounds": [
                {
                  "round": 1,
                  "focus": "Understanding",
                  "prompt": "I have this equation: h = -5t² + 20t. Can you explain what each part represents in real-world terms?"
                },
                {
                  "round": 2,
                  "focus": "Method exploration",
                  "prompt": "Show me 3 different methods to solve -5t² + 20t = 0 and explain when each method is most useful."
                },
                {
                  "round": 3,
                  "focus": "Verification",
                  "prompt": "I got t = 4 seconds. Walk me through checking if this answer makes physical sense."
                }
              ]
            },
            {
              "phase": "Reflection & Practice",
              "time": "15 min",
              "tasks": [
                "Students solve similar problem without AI",
                "Document which AI explanation helped most",
                "Create their own word problem"
              ]
            }
          ],
          "successIndicators": [
            "Can explain problem in own words",
            "Identifies appropriate solution method",
            "Verifies answer independently",
            "Transfers learning to new problem"
          ]
        }
      ]
    },
    {
      "heading": "Social Studies Lessons",
      "lessons": [
        {
          "title": "Lesson 5: Historical Perspectives Analysis",
          "gradeLevel": "10-12",
          "duration": "2 class periods (90 minutes)",
          "topic": "Industrial Revolution Impacts",
          "structure": [
            {
              "period": "Period 1: Primary Source Analysis",
              "activities": [
                {
                  "name": "Document Study",
                  "time": "30 min",
                  "sources": [
                    "Factory owner's diary",
                    "Worker's letter home",
                    "Government report",
                    "Newspaper editorial"
                  ]
                },
                {
                  "name": "Initial Analysis",
                  "time": "15 min",
                  "tasks": [
                    "Identify each perspective",
                    "Note biases",
                    "Find contradictions"
                  ]
                }
              ]
            },
            {
              "period": "Period 2: AI-Enhanced Understanding",
              "activities": [
                {
                  "name": "Multi-Perspective AI Inquiry",
                  "time": "25 min",
                  "roleBasedPrompts": [
                    "You are a factory worker in 1850 Manchester. Describe your daily life, concerns, and hopes for the future.",
                    "You are a factory owner in 1850 Manchester. Explain your business challenges and view of workers.",
                    "You are a government official in 1850 Britain. What are your concerns about industrial growth?"
                  ]
                },
                {
                  "name": "Synthesis Project",
                  "time": "20 min",
                  "requirements": [
                    "Must use primary source evidence",
                    "Include AI-generated insights",
                    "Show complexity of issues",
                    "Draw modern parallels"
                  ]
                }
              ]
            }
          ],
          "assessmentFocus": [
            "Historical accuracy",
            "Multiple perspective integration",
            "Critical analysis of sources",
            "Thoughtful use of AI",
            "Modern connections"
          ]
        },
        {
          "title": "Lesson 6: Geography and Climate Change",
          "gradeLevel": "8-9",
          "duration": "2 class periods (90 minutes)",
          "topic": "Local Climate Impact Analysis",
          "structure": [
            {
              "day": "Day 1: Data Gathering",
              "activities": [
                {
                  "name": "Local Research",
                  "time": "45 min",
                  "dataTypes": [
                    "Historical weather data",
                    "Geographic features",
                    "Economic activities",
                    "Population changes"
                  ]
                }
              ]
            },
            {
              "day": "Day 2: AI-Powered Analysis",
              "activities": [
                {
                  "name": "AI Climate Consultant",
                  "time": "20 min",
                  "prompt": "Given these geographic features [student lists] and historical weather patterns [data], what climate change impacts are most likely for our region in the next 50 years?"
                },
                {
                  "name": "Action Plan Development",
                  "time": "25 min",
                  "tasks": [
                    "Identify top 3 risks",
                    "Propose adaptations",
                    "Consider economic impacts",
                    "Design community response"
                  ]
                },
                {
                  "name": "Presentation Prep",
                  "components": [
                    "Combine data visualizations",
                    "Integrate AI insights",
                    "Prepare recommendations",
                    "Practice delivery"
                  ]
                }
              ]
            }
          ]
        }
      ]
