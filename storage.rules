rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // PDF attachments stored as: /pdf-uploads/{userId}/{chatId}/{filename}
    match /pdf-uploads/{userId}/{chatId}/{filename} {
      // Only file owner can read/write their PDFs
      // TODO: Add instructor access for course oversight when needed
      allow read, write: if isOwner(userId);
    }
    
    // User profile images stored as: /profile-images/{userId}/{filename}
    match /profile-images/{userId}/{filename} {
      allow read: if isAuthenticated();  // Public read for profile images
      allow write: if isOwner(userId);   // Only owner can upload
    }
    
    // Course materials stored as: /course-materials/{courseId}/{filename}
    match /course-materials/{courseId}/{filename} {
      // Only course members can read course materials
      // Only instructors and admins can upload course materials
      allow read: if isAuthenticated(); // TODO: Restrict to course members when courseId lookup is available
      allow write: if isAuthenticated(); // TODO: Restrict to instructors/admins when role lookup is available
    }
  }
}